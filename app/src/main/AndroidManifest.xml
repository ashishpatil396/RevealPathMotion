<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.ndorigatti.android.revealpathmotion" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".StartingActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EndingActivity"
            android:label="@string/title_activity_ending"
            android:parentActivityName=".StartingActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="it.ndorigatti.android.revealpathmotion.StartingActivity" />
        </activity>
    </application>

</manifest>
